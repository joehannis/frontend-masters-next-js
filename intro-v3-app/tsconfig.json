{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "middleware.js",
    "utils/db.js",
    "utils/actions.js",
    "components/TodoList.jsx",
    "components/Todo.jsx",
    "components/NewTodoForm.jsx",
    "app/page.jsx",
    "app/layout.jsx",
    "app/docs/[[...id]]/page.jsx",
    "app/api/todo/route.js",
    "app/(dashboard)/layout.jsx",
    "app/(dashboard)/todos/page.jsx",
    "app/(dashboard)/todos/loading.jsx",
    "app/(dashboard)/todos/error.jsx"
  ],
  "exclude": ["node_modules"]
}
